# Security headers for Apache (if used)
Header always set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet"
Header always set X-Frame-Options "DENY"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Cache-Control "private, no-cache, no-store, must-revalidate"

# Block common bot user agents
RewriteEngine On
RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegram|discord|crawler|spider|scraper) [NC]
RewriteRule .* - [F,L]

# Block direct IP access attempts
RewriteCond %{HTTP_HOST} ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$
RewriteRule .* - [F,L]

# Prevent access to sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files "robots.txt">
    Order allow,deny
    Allow from all
</Files>
